APP_NAME="SaaS Beauty Manager"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_DOMAIN=localhost
APP_TIMEZONE=America/Sao_Paulo

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=saas_beauty
DB_USERNAME=root
DB_PASSWORD=secret

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=local

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=saas_beauty

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@saasbeuty.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Multi-tenancy Configuration
TENANT_CACHE_TTL=3600
TENANT_DEFAULT_PLAN=basico
TENANT_SUBDOMAIN_VALIDATION=true

# WhatsApp Integration (Evolution API)
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=
WHATSAPP_API_KEY=
WHATSAPP_WEBHOOK_URL=
WHATSAPP_INSTANCE_NAME=

# Stripe Payment Gateway
STRIPE_ENABLED=false
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
STRIPE_CURRENCY=BRL

# MercadoPago Payment Gateway
MERCADOPAGO_ENABLED=false
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_WEBHOOK_SECRET=
MERCADOPAGO_CURRENCY=BRL

# Google OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# Pusher Configuration (for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# File Storage Configuration
FILESYSTEM_DISK=local
FILESYSTEM_CLOUD=s3

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DISK=local
BACKUP_RETENTION_DAYS=30

# Security Configuration
SECURITY_RATE_LIMIT_API=60
SECURITY_RATE_LIMIT_LOGIN=5
SECURITY_SESSION_TIMEOUT=120
SECURITY_PASSWORD_MIN_LENGTH=8

# Notification Configuration
NOTIFICATION_CHANNELS=mail,database
NOTIFICATION_REMINDER_HOURS=24,2
NOTIFICATION_QUEUE_ENABLED=true

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365
AUDIT_QUEUE_ENABLED=true

# Development Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
