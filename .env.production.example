APP_NAME="SaaS Beauty Manager"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://SEU_DOMINIO
APP_DOMAIN=SEU_DOMINIO
APP_TIMEZONE=America/Sao_Paulo

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

LOG_CHANNEL=stack
LOG_LEVEL=info

# Banco de Dados (RDS MySQL)
DB_CONNECTION=mysql
DB_HOST=SEU_RDS_ENDPOINT
DB_PORT=3306
DB_DATABASE=saas_beauty
DB_USERNAME=SEU_USUARIO_DB
DB_PASSWORD=SEU_PASSWORD_DB

# Sessão/Cache/Fila (ElastiCache Redis)
SESSION_DRIVER=redis
SESSION_DOMAIN=.SEU_DOMINIO
SESSION_LIFETIME=120
CACHE_STORE=redis
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

REDIS_CLIENT=phpredis
REDIS_HOST=SEU_ELASTICACHE_ENDPOINT
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# E-mail (produção)
MAIL_MAILER=smtp
MAIL_HOST=SEU_SMTP
MAIL_PORT=587
MAIL_USERNAME=SEU_USUARIO_SMTP
MAIL_PASSWORD=SEU_PASSWORD_SMTP
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@SEU_DOMINIO"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=SEU_BUCKET
AWS_USE_PATH_STYLE_ENDPOINT=false
FILESYSTEM_DISK=s3
FILESYSTEM_CLOUD=s3

# Multi-tenancy
TENANT_CACHE_TTL=3600
TENANT_DEFAULT_PLAN=basico
TENANT_SUBDOMAIN_VALIDATION=true

# Segurança
SECURITY_RATE_LIMIT_API=60
SECURITY_RATE_LIMIT_LOGIN=5

# Vite
VITE_APP_NAME="${APP_NAME}"